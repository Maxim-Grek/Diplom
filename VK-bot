from random import randrange

import vk_api
from vk_api.longpoll import VkLongPoll, VkEventType

token = "vk1.a.UgfGGp0gqT50mHkom9lZ4NvNtSiFdwZIb1ZcFpmTKcICPR0J2AOCa6vW5akZazbkBJiGv7LwlEjn1E-ZCvsN2R3ryE5qRz7qsHVAgyrjXWsAea7m4ejnhVKOOdhLCppzYwZk70vfpx2JBRagIMGbphDfRpUIHcOSDYIhnpwZ3UbaJstbaKWnIIxM6XoLVArPYLrWk8EE9QSKllU_b7lu3Q"

vk = vk_api.VkApi(token=token)
longpoll = VkLongPoll(vk)


def write_msg(user_id, message):
    vk.method('messages.send', {'user_id': user_id, 'message': message,  'random_id': randrange(10 ** 7),})


for event in longpoll.listen():
    if event.type == VkEventType.MESSAGE_NEW:

        if event.to_me:
            request = event.text

            if request == "привет":
                write_msg(event.user_id, f"Хай, {event.user_id}")
            elif request == "пока":
                write_msg(event.user_id, "Пока((")
            else:
                write_msg(event.user_id, "Не поняла вашего ответа...")
